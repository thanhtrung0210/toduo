<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@android:color/white">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Xác nhận chỉnh sửa"
        android:fontFamily="@font/playpensans_bold"
        android:textSize="32sp"
        android:textStyle="bold"
        android:layout_gravity="center"
        android:layout_marginBottom="16dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Thông tin hiện tại"
        android:fontFamily="@font/playpensans_bold"
        android:textSize="20sp"
        android:layout_marginBottom="8dp"/>

    <TextView
        android:id="@+id/task_pending_edit_current_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mục tiêu: "
        android:fontFamily="@font/playpensans_medium"
        android:textSize="16sp"
        android:layout_marginBottom="8dp"/>

    <TextView
        android:id="@+id/task_pending_edit_current_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mô tả: "
        android:fontFamily="@font/playpensans_medium"
        android:textSize="16sp"
        android:layout_marginBottom="8dp"/>

    <TextView
        android:id="@+id/task_pending_edit_current_deadline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hạn chót: "
        android:fontFamily="@font/playpensans_medium"
        android:textSize="16sp"
        android:layout_marginBottom="8dp"/>

    <TextView
        android:id="@+id/task_pending_edit_current_category"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Phân loại: "
        android:fontFamily="@font/playpensans_medium"
        android:textSize="16sp"
        android:layout_marginBottom="8dp"/>

    <TextView
        android:id="@+id/task_pending_edit_current_assignment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Phân công: "
        android:fontFamily="@font/playpensans_medium"
        android:textSize="16sp"
        android:layout_marginBottom="16dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Thông tin muốn sửa"
        android:fontFamily="@font/playpensans_bold"
        android:textSize="20sp"
        android:layout_marginBottom="8dp"/>

    <TextView
        android:id="@+id/task_pending_edit_new_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mục tiêu: "
        android:fontFamily="@font/playpensans_medium"
        android:textSize="16sp"
        android:layout_marginBottom="8dp"/>

    <TextView
        android:id="@+id/task_pending_edit_new_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mô tả: "
        android:fontFamily="@font/playpensans_medium"
        android:textSize="16sp"
        android:layout_marginBottom="8dp"/>

    <TextView
        android:id="@+id/task_pending_edit_new_deadline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hạn chót: "
        android:fontFamily="@font/playpensans_medium"
        android:textSize="16sp"
        android:layout_marginBottom="8dp"/>

    <TextView
        android:id="@+id/task_pending_edit_new_category"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Phân loại: "
        android:fontFamily="@font/playpensans_medium"
        android:textSize="16sp"
        android:layout_marginBottom="8dp"/>

    <TextView
        android:id="@+id/task_pending_edit_new_assignment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Phân công: "
        android:fontFamily="@font/playpensans_medium"
        android:textSize="16sp"
        android:layout_marginBottom="16dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="end">

        <Button
            android:id="@+id/task_pending_edit_btn_confirm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Xác nhận"
            android:fontFamily="@font/playpensans_medium"
            android:backgroundTint="?attr/colorPrimary"
            android:layout_marginEnd="8dp"/>

        <Button
            android:id="@+id/task_pending_edit_btn_reject"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Từ chối"
            android:backgroundTint="?attr/colorSecondary"
            android:fontFamily="@font/playpensans_medium"/>
    </LinearLayout>
</LinearLayout>
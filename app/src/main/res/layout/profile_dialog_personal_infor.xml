<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@drawable/custom_dialog_background"
    android:clipToPadding="true">

    <TextView
        android:id="@+id/profile_dialog_personal_info_nickname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Biệt danh: Bé Mèo"
        android:textSize="16sp"
        android:textColor="@android:color/black"
        android:fontFamily="@font/playpensans_medium"
        android:layout_marginBottom="16dp"/>

    <TextView
        android:id="@+id/profile_dialog_personal_info_birthday"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Ngày sinh: 20-05-1995"
        android:textSize="16sp"
        android:textColor="@android:color/black"
        android:fontFamily="@font/playpensans_medium"
        android:layout_marginBottom="16dp"/>

    <TextView
        android:id="@+id/profile_dialog_personal_info_account"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Tài khoản: user1@example.com"
        android:textSize="16sp"
        android:textColor="@android:color/black"
        android:fontFamily="@font/playpensans_medium"
        android:layout_marginBottom="16dp"/>

    <Button
        android:id="@+id/profile_dialog_personal_info_btn_close"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Đóng"
        android:textSize="16sp"
        android:backgroundTint="?attr/colorSecondary"
        android:textColor="@android:color/white"
        android:fontFamily="@font/playpensans_medium"
        android:padding="12dp"/>
</LinearLayout>
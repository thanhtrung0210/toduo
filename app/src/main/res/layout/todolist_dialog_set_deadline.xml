<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@android:color/white">

    <!-- Tiêu đề -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Đặt hạn chót"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_gravity="center"
        android:layout_marginBottom="16dp"/>

    <!-- Phần 1: Chọn Ngày -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginBottom="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Chọn ngày"
                android:fontFamily="@font/playpensans_medium"
                android:textSize="16sp"/>

            <Switch
                android:id="@+id/todolist_set_deadline_switch_select_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/todolist_set_deadline_date_picker_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginTop="8dp"
            android:visibility="gone">

            <Button
                android:id="@+id/todolist_set_deadline_btn_select_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Chọn ngày"
                android:fontFamily="@font/playpensans_medium"
                android:textSize="14sp"/>

            <TextView
                android:id="@+id/todolist_set_deadline_txt_selected_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:fontFamily="@font/playpensans_medium"
                android:text="Chưa chọn"
                android:textSize="14sp"/>
        </LinearLayout>
    </LinearLayout>

    <!-- Phần 2: Chọn Giờ -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginBottom="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Chọn giờ"
                android:fontFamily="@font/playpensans_medium"
                android:textSize="16sp"/>

            <Switch
                android:id="@+id/todolist_set_deadline_switch_select_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/todolist_set_deadline_time_picker_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginTop="8dp"
            android:visibility="gone">

            <Button
                android:id="@+id/todolist_set_deadline_btn_select_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Chọn giờ"
                android:fontFamily="@font/playpensans_medium"
                android:textSize="14sp"/>

            <TextView
                android:id="@+id/todolist_set_deadline_tv_selected_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:fontFamily="@font/playpensans_medium"
                android:text="Chưa chọn"
                android:textSize="14sp"/>
        </LinearLayout>
    </LinearLayout>

    <!-- Phần 3: Các nút -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="end">

        <Button
            android:id="@+id/todolist_set_deadline_btn_confirm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Xác nhận"
            android:fontFamily="@font/playpensans_medium"
            android:textSize="14sp"
            android:layout_marginEnd="8dp"/>

        <Button
            android:id="@+id/todolist_set_deadline_btn_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hủy"
            android:fontFamily="@font/playpensans_medium"
            android:backgroundTint="?attr/colorSecondary"
            android:textSize="14sp"/>

    </LinearLayout>
</LinearLayout>